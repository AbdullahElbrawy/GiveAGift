{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dest"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*\\.(ico|html|js|json|png|jpg|css|svg))",
      "dest": "/$1"
    },
    {
      "src": "/.*",
      "headers": { "cache-control": "s-maxage=1, stale-while-revalidate" },
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
